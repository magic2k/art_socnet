<header class="navbar navbar-fixed-top navbar-default">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "патифон", '#', id: "logo" %>
      <nav>
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to "Главная", root_path %></li>
          <li><%= link_to "Помощь", help_path %></li>
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href='#' class="dropdown-toggle" data-toggle="dropdown"> Здравствуйте, <%= current_user.firstname %>
                  <b class="caret"></b></a>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                  <li role="presentation"><%= link_to current_user do %>
                        <span class="glyphicon glyphicon-home"></span> Моя Страница
                    <% end %>
                  </li>
                  <li role="presentation"><%= link_to edit_user_path(current_user) do %>
                        <span class="glyphicon glyphicon-wrench"></span> Настройки
                    <% end %>
                  </li>
                  <li role="presentation" class="divider"></li>
                  <li role="presentation"><%= link_to destroy_user_session_path, method: :delete do %>
                        <span class="glyphicon glyphicon-off"></span> Выйти
                    <% end %>
                  </li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to 'Войти', new_user_session_path %></li>
              <li><%= link_to 'Регистрация', signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
