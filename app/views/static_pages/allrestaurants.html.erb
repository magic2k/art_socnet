<h1>Рестораны</h1>
<div class="container">
	<div class="row">
		<div class="col-md-offset-2">
			<% @restaurants.each do |r| %>
			<div class="row">
				<div class="col-md-2">
					<%= link_to image_tag(r.avatar(:thumb), class: 'thumbnail'), r %>
				</div>
				<div class="col-md-4">	
					<blockquote>
					<p><%= link_to r.restaurant.name, r %></p>
					<small><cite><% r.restaurant.restaurant_type.to_types_array(r.restaurant.restaurant_type).each do |t| %>
							<%= (t + ' ') %> 
						 <% end %>
						</cite><i class="glyphicon glyphicon-circle-arrow-left"></i></small>
					</blockquote>	
				</div>
			</div>		
			<% end %>
		</div>
	</div>
</div>