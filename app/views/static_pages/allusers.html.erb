<h1>Люди</h1>
<div class="container">
  <div class="row">
    <div class="col-md-offset-2">
      <% @users.each do |u| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to image_tag(u.avatar(:thumb), class: 'thumbnail'), u %>
            </div>
            <div class="col-md-4">
              <blockquote>
                <p><%= link_to(u.firstname + ' ' + u.lastname, u) %></p>
                <small><cite>
                  <% u.showman_type.to_types_array(u.showman_type).each do |t| %>
                      <%= (t + ' ') %>
                  <% end %>
                </cite></small>
              </blockquote>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
