<h1>Люди</h1>

<div class="row">
	<div class="col-md-8 col-md-offset-3">
	<ul>
		<% @users.each do |u| %>
		<li  class="list-inline">
			<% if u.avatar.nil? %>
			    <%= link_to image_tag("std_avatar.jpg", height: 64, width: 64), u %>
			<% else %>
				<%= lint_to u.avatar, u %>
			<% end %>
			<%= link_to( u.firstname + ' ' + u.lastname, u ) %>
			<%# link_to u.lastname, u %>
		</li>
		<% end %>
	</ul>
	</div>
</div>