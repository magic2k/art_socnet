<h1>Изменение профиля</h1>
<!-- navbar with tabs-->
<div class="row">
  <!-- TODO: make a navbar partial with JS active class -->
  <%= render partial: 'shared/edit_tabs', locals: {user_id: @user.id} %>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= form_for @user, html: {multipart: true} do |f| %>
        <%= render partial: 'users/partials/user_info_form_fields',
                   locals: {f: f} unless @user.usr_type == 'restaurant' %>
        <%= render partial: 'users/partials/avatar_form_field',
                   locals: {f: f} %>
        <%= render partial: 'users/partials/contacts_form_fields',
                   locals: {f: f} %>
        <%= f.submit 'Сохранить', class: 'btn btn-lg btn-primary' %>
    <% end %>

  </div>
</div>
  